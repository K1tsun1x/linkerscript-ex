{
  "name": "linkerscript-ex",
  "displayName": "LinkerScript?EX",
  "description": "Extension for LinkerScript (.ld)",
  "version": "0.0.1",
  "icon": "./images/icon128x128.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other", "Programming Languages"
  ],
  "main": "./out/extension.js",
  "keywords": [
    "linker",
    "linkerscript",
    "ld",
    "GNU ld"
  ],
  "contributes": {
    "languages": [
      {
        "id": "linkerscript",
        "aliases": ["LinkerScript", "Linker Script", "linker script", "linkerscript", "ld"],
        "extensions": [".ld"],
        "icon": {
          "light": "./images/icon128x128.png",
          "dark": "./images/icon128x128.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "linkerscript",
        "scopeName": "source.linkerscript",
        "path": "./syntaxes/linkerscript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "linkerscript",
        "path": "./snippets/linkerscript.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
